@model ResetPasswordModel
@{
    ViewBag.Title = Resource.RecoverPass;
}

<div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 min-form">
    <div class="panel panel-default bootstrap-admin-no-table-panel">
        <div class="panel-heading">
            <h2 class="bootstrap-admin-box-title">@ViewBag.Title</h2>
        </div>
        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Code)
                @Html.HiddenFor(model => model.Id)
                <fieldset>
                    <legend></legend>
                    @Html.ValidationSummary("", new { @class = "text-danger col-xs-12" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </fieldset>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8" style="padding: 0">
                        @Html.SubmitBtn(Resource.Recover)
                    </div>
                </div>
            }
        </div>
    </div>
</div>