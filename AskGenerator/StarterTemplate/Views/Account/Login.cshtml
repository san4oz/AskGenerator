@model AskGenerator.ViewModels.LoginViewModel
@{
    ViewBag.Title = @Resource.LogIn;
}

<div class="col-md-offset-3 col-md-6 min-form">
    <div class="panel panel-default bootstrap-admin-no-table-panel">
        <div class="panel-heading">
            <div class="bootstrap-admin-box-title h3">@Resources.Resource.LogIn</div>
        </div>
        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
            <form method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend></legend>
                    @Html.ValidationSummary(true)
                    @Html.EditorForModel()
                    <div class="col-md-offset-5 col-md-7">
                        <button type="submit" class="btn btn-primary">@Resource.LogIn </button>
                        <button type="reset" class="btn btn-default">@Resource.Clean</button>
                    </div>
                </fieldset>
            </form>
            <form method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend class="h3">@Resource.OrEnterTheKey</legend>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Key, htmlAttributes: new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(x => x.Key)

                            <button type="submit" class="btn btn-primary">@Resource.LogIn </button>
                            @Html.ValidationMessageFor(x => x.Key, null, htmlAttributes: new { @class = "col-xs-12" })
                        </div>
                    </div>
                    <div class="col-md-offset-3 col-md-9">
                        <div id="g-recaptcha"></div>
                    </div>
                </fieldset>
            </form>>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/captcha.js")
}