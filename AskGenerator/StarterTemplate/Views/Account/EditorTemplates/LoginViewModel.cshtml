@model AskGenerator.ViewModels.LoginViewModel

<div class="form-group">
    @Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "col-md-5 control-label" })
    <div class="col-md-7">
        @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, null, htmlAttributes: new { @class = "col-xs-12" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "col-md-5 control-label" })
    <div class="col-md-7">
        @Html.PasswordFor(x => x.Password, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password, null, htmlAttributes: new { @class = "col-xs-12" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(x => x.IsPersistent, htmlAttributes: new { @class = "col-md-5 control-label" })
    <div class="col-xs-1">
        @Html.EditorFor(x => x.IsPersistent)
    </div>
</div>