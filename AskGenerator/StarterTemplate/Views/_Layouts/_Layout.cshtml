@using System.Web.Optimization
@{
    Layout = "_Base.cshtml";
}
@section Styles{
    @Styles.Render("~/Content/FE.css")
}

@section NavBar{
    <header class="container navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
        @*Brand and toggle get grouped for better mobile display*@
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">@Resources.Resource.Generator</a>
        </div>

        @*Collect the nav links, forms, and other content for toggling*@
        <nav class="collapse navbar-collapse main-navbar-collapse col-sm-pull-1" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                @Html.MenuRouteItem(Resources.Resource.Board, "Board")
                @Html.MenuRouteItem(Resources.Resource.VotePage, "Vote")
                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
    </header>
}

<div class="row">
    <div class="col-xs-12">
        @RenderBody()
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/Script/select2")
    @Scripts.Render("~/Scripts/Teacher.js")
    @Scripts.Render("~/bundles/pages")
    @RenderSection("Scripts", required: false)
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit&hl=uk"
            async defer>
    </script>
}