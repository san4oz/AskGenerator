@using System.Web.Optimization
@{
    Layout = "_Base.cshtml";
}
@section Styles{
    <link href='https://fonts.googleapis.com/css?family=Roboto:500&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/FE.css")
    @RenderSection("Styles", required: false)
}

@section GTM{
    @Html.Partial("_gtm")
}

@section NavBar{
    <header class="container navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
        @*Brand and toggle get grouped for better mobile display*@
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="~/Content/img/LogoMakr.png" />      Evaluate</a>
        </div>

        @*Collect the nav links, forms, and other content for toggling*@
        <nav class="collapse navbar-collapse main-navbar-collapse col-sm-pull-1" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                @Html.MenuRouteItem(Resource.Board, "Board")
                @Html.MenuItem(Resource.Info, "Index", "Info")
                

                @if (WebsiteSettings.IsVotingEnabled)
                {
                    @Html.MenuRouteItem(Resource.VotePage, "Vote")
                }
                else
                {
                    @Html.MenuItem("Детальний звіт", "Team", "Details")
                }
                    @Html.Partial("_LoginPartial")
            </ul>
        </nav>
    </header>
}

<div class="col-xs-12">
    @RenderBody()
</div>

@section Footer{
    <footer class="main-footer">
        @Footer()
    </footer>
}

@section Scripts{
    @Scripts.Render("~/bundles/pages")
    @RenderSection("Scripts", required: false)
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit&hl=uk"
            async defer>
    </script>
}

@helper Footer()
{
    <ul class="col-xs-12">
        <li class="col-xs-12 col-sm-4 col-sm-offset-2">
            <p class="reachus">@Resource.AboutUs</p>
            <ul>
                <li><a href="mailto:@Resource.mail">@Resource.mail</a></li>
                <li><a href="https://vk.com/semka148">@Resource.vk</a></li>
                <li><a href="https://www.facebook.com/semka148">@Resource.facebook</a></li>
                <li>@Resource.phone</li>
            </ul>
        </li>
        <li class="col-xs-12 col-sm-4">
            <p class="home">@Resource.workforyou</p>
            <button id="toTop" class="up"></button>
            <a class="logo" href="http://nom-networkofmentors.rhcloud.com/about">@Resource.nom <i>&copy; 2016 - @DateTime.Now.Year</i></a>
        </li>
    </ul>
}