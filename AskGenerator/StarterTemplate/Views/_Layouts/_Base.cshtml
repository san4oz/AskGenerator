@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title data-title="@ViewBag.Title">@ViewBag.Title - @Resource.Generator</title>

    <meta name="keywords" content="@Robots.GetKeyWords()" />
    <meta name="description" content="@Robots.Description" />
    <meta name="robots" content="@Robots.ToString()" />


    @Styles.Render("~/Content/Theme")
    @Styles.Render("~/Content/Vendors")
    @Styles.Render("~/Content/plugins")
    @Styles.Render("~/bundles/css")
    @RenderSection("Styles", required: false)
    <link href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:700" rel="stylesheet" />
</head>
@{
    var bdClass = ViewBag.BodyClass ?? string.Empty;
}
<body class="@bdClass">
    @RenderSection("GTM", false)
    @RenderSection("NavBar", required: false)

    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Footer", required: false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/inputs")
    @Scripts.Render("~/bundles/controls")

    @RenderSection("Scripts", required: false)
</body>
</html>