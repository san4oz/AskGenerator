@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.Resource.Generator</title>
    @Styles.Render("~/Content/Theme")
    @Styles.Render("~/Content/Vendors")
    @Styles.Render("~/Css/select2.css")
    @Styles.Render("~/Css/Site.css")
    @RenderSection("Styles", required: false)
    <link href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:700" rel="stylesheet" />
</head>
@{
    var bdClass = ViewBag.BodyClass ?? string.Empty;
}
<body class="@bdClass">
    @RenderSection("NavBar", required: false)

    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <footer class="main-footer">
        @Footer()
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/select2.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>

@helper Footer() {
    <ul>
        <li>
            <p class="reachus">@Resources.Resource.AboutUs</p>
            <ul>
                <li>@Resources.Resource.mail</li>
                <li><a href="https://vk.com/semka148">@Resources.Resource.vk</a></li>
                <li><a href="https://www.facebook.com/semka148">@Resources.Resource.facebook</a></li>
                <li>@Resources.Resource.phone</li>
            </ul>
        </li>
        <li>
            <p class="home">@Resources.Resource.workforyou</p>
            <a href="#" class="up"></a>
            <a class="logo" href="#">@Resources.Resource.nom <i>&copy; 2016 - @DateTime.Now.Year</i></a>
        </li>
    </ul>
}