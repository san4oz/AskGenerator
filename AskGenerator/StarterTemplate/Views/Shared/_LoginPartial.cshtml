@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            @User.Identity.GetEmail()
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink(Resources.Resource.LogOut, "Logout", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "logoutLink" })</li>
            <li><a href="#">@Resources.Resource.SomethingElseHere</a></li>
            <li role="presentation" class="divider"></li>
        </ul>
    </li>
}
else
{
    @*Html.MenuRouteItem(Resources.Resource.LogIn, "Login", glyphicon: null)*@
}