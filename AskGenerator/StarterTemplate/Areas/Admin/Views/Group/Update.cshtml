@model AskGenerator.ViewModels.GroupViewModel

@{
    ViewBag.Title = @Resources.Resource.EditGroup;
}

<div class="col-md-10">
    <div class="row">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">@Resources.Resource.Group</div>
            </div>
            <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                @using (Html.BeginForm("Update", "Group", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <legend>@Resources.Resource.CreateGroup</legend>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name, htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">@Resources.Resource.Save</button>
                        <button type="reset" class="btn btn-default">@Resources.Resource.Clean</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
