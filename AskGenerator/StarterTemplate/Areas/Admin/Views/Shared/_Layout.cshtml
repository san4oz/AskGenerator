@using System.Web.Optimization
@{
    Layout = "~/Views/_Layouts/_Base.cshtml";
    ViewBag.BodyClass = "bootstrap-admin-with-small-navbar";
}
@section Styles{
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Content/Admin.css")
    @Scripts.Render("~/bundles/modernizr")
}

@section NavBar{
    <nav class="container navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            @*Brand and toggle get grouped for better mobile display*@
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">@Resources.Resource.Generator</a>
            </div>

            @*Collect the nav links, forms, and other content for toggling*@
            <div class="collapse navbar-collapse main-navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
}

<div class="col-md-2 bootstrap-admin-col-left">
    @Html.Partial("_LeftMenu")
</div>
<div class="col-md-10">
    @RenderBody()
</div>


@section Scripts{
    @Scripts.Render("~/Script/select2")
    @Scripts.Render("~/Scripts/controls.js")
    @Scripts.Render("~/Scripts/Teacher.js")

    @RenderSection("Scripts", required: false)
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit&hl=uk"
            async defer>
    </script>
}
