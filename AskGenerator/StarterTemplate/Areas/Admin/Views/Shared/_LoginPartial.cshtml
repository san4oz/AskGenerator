@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

        <li class="dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-hover="dropdown"> <i class="glyphicon glyphicon-user"></i>
                @User.Identity.GetEmail()
            <i class="caret"></i></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Вихід", "Logout", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "logoutLink" })</li>
                <li><a href="#">@Resources.Resource.SomethingElseHere</a></li>
                <li role="presentation" class="divider"></li>
            </ul>
        </li>
}
else
{
    <li>@Html.ActionLink("Реєстрація", "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Вхід", "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
}
