@model string
@{
    var groups = User.IsAdmin()
        ? AskGenerator.Site.GroupManager.All()
        : AskGenerator.Site.GroupManager.GetByFaculty(User.Identity.GetGroupId());
    var list = (IEnumerable<SelectListItem>)groups.Select(g => new SelectListItem()
                {
                    Text = g.Name,
                    Value = g.Id,
                    Selected = g.Id.Equals(Model)
                });
    var modelName = Html.NameFor(x=>x).ToString();
}

@Html.DropDownListFor(m => m, selectList:list)