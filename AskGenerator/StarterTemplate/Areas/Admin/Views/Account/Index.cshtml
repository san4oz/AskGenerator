@model  IList<AskGenerator.Business.Entities.User>

@{
    ViewBag.Title = @Resources.Resource.ListStudents;
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">
                <a href="@Url.Action("Create", "Account")">+ @Resource.AddUser</a>
            </div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Resource.Email</th>
                        <th>@Resource.IsActive</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.OrderByDescending(u => u.Email).ThenBy(u => u.EmailConfirmed))
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td class="line-key">@Html.DisplayFor(s => user.EmailConfirmed)</td>
                            <td>
                                <a class="btn btn-primary" style="float: left; margin-right: 10px;"  href="@Url.Action("Edit", "Account", new { id = user.Id }) ">@Resource.Edit</a>
                                <a class="btn btn-danger delete" data-id="@user.Id" href="@Url.Action("Delete", new { id = user.Id })">@Resource.Remove</a>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(Pages.Students.init);
    </script>
}