@model  List<AskGenerator.ViewModels.StudentViewModel>
@using System.Web.Optimization
@{
    ViewBag.Title = "Студенты преподователя";
    var questions = Site.QuestionManager.All(); 
    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Генератор</title>
    @Styles.Render("~/Content/Theme")
    @Styles.Render("~/Content/Vendors")
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Css/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bootstrap-admin-with-small-navbar">

    <div class="container" style="margin-top: -100px;">
        <div class="row-fluid">
            <div class="col-md-12 offset4">
                <div class="row">
                    <div class="panel panel-default bootstrap-admin-no-table-panel">
                        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                            @foreach(var student in Model)
                            {
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                    <a class="thumbnail" href="#">
                                        <img class="img-responsive" src="@student.Image" alt="">
                                    </a>
                                </div>
                                <div class="col-lg-9 col-md-8 col-xs-6">
                                    <div>
                                        <div>@Html.LabelFor(x => student.Name)</div>
                                        <div>@Html.DisplayFor(x => student.Name)</div>
                                    </div>
                                    <div>
                                        <div>@Html.LabelFor(x => student.Group.Name)</div>
                                        <div>@Html.DisplayFor(x => student.Group.Name)</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row"><h2 class="questions-h2">Вопросы:</h2></div>
                            <div class="row rate-row">
                                @foreach (var question in questions)
                                {
                                <div class="col-lg-3 col-md-3 col-xs-3 question-wrapper">
                                    <div class="question">@question.QuestionBody</div>
                                    <div class="rate-number">
                                        @for (var i = 1; i <= 5; i++)
                                        { <span class="rate">@i.ToString()</span> }
                                    </div>
                                    <div class="lower">@question.LowerRateDescription</div>
                                    <div class="higher">@question.HigherRateDescription</div>
                                </div>
                                }
                            </div>
                            <hr />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Script/select2")
@Scripts.Render("~/Scripts/Teacher.js")

