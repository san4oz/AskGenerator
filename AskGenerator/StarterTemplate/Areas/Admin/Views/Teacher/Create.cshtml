@model  TeacherComposeViewModel
@using System.Linq.Expressions;
@{
    string legend;
    if (IsEditing) {
        ViewBag.Title = Resource.OldTeacher;
        legend = Resource.EditTeacher;
    }
    else {
        ViewBag.Title = Resource.NewTeacher;
        legend = Resource.CreatreTeacher;
    }
    var maxSize = "100px";
}

<div class="col-md-10">
    <div class="row">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <header class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">@Resource.Teacher</div>
            </header>
            <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                <form method="post" class="form-horizontal" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.EditorFor(x => x.Teacher.Id)
                    <fieldset>
                        <legend>@legend</legend>

                        @TextBoxGroup(x => x.Teacher.FirstName)
                        @TextBoxGroup(x => x.Teacher.LastName)

                        <div class="form-group">
                            @Html.LabelFor(x => x.Teacher.SelectedGroups, htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.ListBoxFor(x => x.Teacher.SelectedGroups, Model.AllGroups)
                                @Html.ValidationMessageFor(x => x.Teacher.SelectedGroups)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(x => x.Teacher.TeamId, htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.DropDownListFor(x => x.Teacher.TeamId, Model.Teams)
                                @Html.ValidationMessageFor(x => x.Teacher.TeamId)
                            </div>
                        </div>

                        @if(IsEditing && !string.IsNullOrEmpty(Model.Teacher.Image)){
                            <img src="@Model.Teacher.Image" alt="@Model.Teacher.Image.Split('/').Last()" style ="float:right; max-width:@maxSize; max-height:@maxSize;"/>
                        }
                        <div class="form-group">
                            @Html.LabelFor(x => x.Teacher.ImageFile, htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Teacher.ImageFile, new { type = "file"})
                                @Html.EditorFor(x => x.Teacher.Image)
                                @Html.ValidationMessageFor(x => x.Teacher.Image)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(x => x.Teacher.IsMale, htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.EditorFor(x => x.Teacher.IsMale)
                                @Html.ValidationMessageFor(x => x.Teacher.IsMale)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="btn-group col-lg-offset-2 col-lg-10">
                                @Html.SubmitBtn(Resource.Save)
                                @Html.ClearBtn(Resource.Clean)
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $("#Teacher_SelectedGroups").select2({
                placeholder: "@Resource.SelectGroup",
                multiple: true,
                width: 400,
                maximumSelectionLength: 20
            });
            $('#Teacher_TeamId').select2({
                placeholder: "@Resource.SelectDepartment",
                multiple: false,
                width: 400,
                maximumSelectionLength: 20
            });
        });
    </script>
}

@helper TextBoxGroup(Expression<Func<TeacherComposeViewModel, string>> selector) {
    <div class="form-group">
        @Html.LabelFor(selector, htmlAttributes: new { @class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.TextBoxFor(selector, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(selector)
        </div>
    </div>
}