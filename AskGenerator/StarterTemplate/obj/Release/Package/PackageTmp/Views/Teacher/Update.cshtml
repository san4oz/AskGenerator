@model  AskGenerator.ViewModels.TeacherComposeViewModel

@{
    ViewBag.Title = "Редактирование преподавателя";
}

<div class="col-md-10">
    <div class="row">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Преподаватель</div>
            </div>
            <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                @using (Html.BeginForm("Update", "Teacher", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <legend>Редактирование преподавателя</legend>
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Teacher.FirstName, htmlAttributes: new { @class = "col-lg-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(x => x.Teacher.FirstName, htmlAttributes: new { @clas = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Teacher.LastName, htmlAttributes: new { @class = "col-lg-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(x => x.Teacher.LastName, htmlAttributes: new { @clas = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Teacher.Groups, htmlAttributes: new { @class = "col-lg-2 control-label" })
                                    <div class="col-lg-10">
                                        @Html.ListBoxFor(x => x.Teacher.Groups, Model.AllGroups)
                                    </div>
                                </div>

                            </div>    
                        </div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <button type="reset" class="btn btn-default">Очистить</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Teacher_Groups").select2({
                placeholder: "Выберите группы",
                width: 400
            });
        });
    </script>
}
