@model  IList<AskGenerator.ViewModels.StudentViewModel>

@{
    ViewBag.Title = @Resources.Resource.ListStudents;
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title"><a href="@Url.Action("Create", "Student")">+ @Resources.Resource.AddStudent</a></div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Resources.Resource.FirstName</th>
                        <th>@Resources.Resource.LastName</th>
                        <th>@Resources.Resource.Group</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.OrderBy(x => x.FirstName))
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Group.Name</td>
                            <td>
                                <a class="btn btn-primary" style="float: left; margin-right: 10px;"  href="@Url.Action("Edit", "Student", new {id=student.Id}) ">Редактировать</a>
                                @using(@Html.BeginForm("Delete", "Student", FormMethod.Post))
                                {
                                    <input type="hidden" id="id" value="@student.Id" name="Id" />
                                    <button class="btn btn-danger" type="submit">@Resources.Resource.Remove</button>
                                }
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>
