@model  List<AskGenerator.Mvc.ViewModels.TeamViewModel>

@{
    ViewBag.Title = "Список кафедр";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title"><a href="@Url.Action("Create", "Team")">+ Додати кафедру</a></div>
        </div>
        <div class="bootstrap-admin-panel-content">
            @Html.AntiForgeryToken()
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Назва</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model)
                    {
                        <tr>
                            <td>@team.Name</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="@Url.Action("Edit", "Team", new {id=team.Id})">Edit</a>
                                    <a class="btn btn-warning delete" data-id="@team.Id" href="@Url.Action("Delete", "Team")">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>