@model  List<AskGenerator.ViewModels.TeacherViewModel>

@{
    ViewBag.Title = "Список преподователей";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title"><a href="@Url.Action("Create", "Teacher")">+ Добавить преподавателя</a></div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Студенты</th>
                        <th>Фото</th>
                        <th>
                            @using (Html.BeginForm("GetZippedPdf", "Teacher", FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-success">Скачать zip архив</button>
                            }
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model.OrderBy(x => x.FirstName))
                    {
                        <tr>
                            <td>@teacher.FirstName</td>
                            <td>@teacher.LastName</td>
                            <th><a href="@Url.Action("Students", "Teacher", new { teacherId = teacher.Id })">Перейти к списку</a></th>
                            <td>@(teacher.Image.YesNo().ToString() == "Yes" ? "Так" : "Ні")</td>
                            <td>
                                @using (Html.BeginForm("GeneratePDF", "Teacher", FormMethod.Post))
                                {
                                    <input name="TeacherId" hidden="hidden" value="@teacher.Id"/>
                                    <button type="submit" class="btn btn-success">Скачать .pdf файл</button>
                                }
                            </td>                            
                            <td><a class="btn btn-primary" href="@Url.Action("Edit", "Teacher", new {id=teacher.Id})">Редактировать</a></td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>