@model  AskGenerator.Mvc.ViewModels.TeacherVotingViewModel
@using System.Web.Optimization
@{
    ViewBag.Title = "Студенты преподователя";
    var questions = Site.QuestionManager.All();
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Генератор</title>
    @Styles.Render("~/Content/Theme")
    @Styles.Render("~/Content/Vendors")
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Css/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bootstrap-admin-with-small-navbar">

    <div class="container" style="margin-top: -100px;">
        <div class="row-fluid">
            <div class="col-md-12 offset4">
                <div class="row">
                    <div class="panel panel-default bootstrap-admin-no-table-panel">
                        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                            <h1 class="techer-name">@Model.Teacher.FirstName  @Model.Teacher.LastName</h1>
                            <div class="student-list row-fluid">

                                <div class="list-info row">
                                    <div class="thumbnails">
                                        @foreach (var student in Model.Students)
                                        {
                                            <div class="student col-lg-4 col-md-4 col-xs-4">

                                                <a class="thumbnail" style="background:url(@student.Image)"></a>
                                                <div class="contact">
                                                    <div>
                                                        @Html.LabelFor(x => student.FirstName):@student.FirstName
                                                    </div>
                                                    <div>@Html.LabelFor(x => student.LastName): @student.LastName</div>
                                                    <div>@Html.LabelFor(x => student.Group): @student.Group.Name</div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <hr />
                                <div class="list-body row">
                                    <table class="student-question-table">
                                        <thead>
                                            <tr>
                                                <td>Студент</td>
                                                @foreach (var question in questions.Where(x => !x.IsAboutTeacher))
                                                {
                                                    <td>@question.QuestionBody</td>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.Students)
                                            {
                                                <tr>
                                                    <td class="student-name">@student.Name</td>
                                                    @foreach (var question in questions.Where(x => !x.IsAboutTeacher))
                                                    {
                                                        <td>1 2 3 4 5</td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Script/select2")
@Scripts.Render("~/Scripts/Teacher.js")

